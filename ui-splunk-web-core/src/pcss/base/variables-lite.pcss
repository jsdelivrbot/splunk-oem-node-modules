/*  Splunk: Variables */
/*  ================================================== */
/*  Variables to customize the look and feel of Bootstrap (splunk version) */

$theme: lite;

/*  STATIC PATHS */
/*  ------------------------- */
$staticPath:        /static;
$staticImagePath:   /static/img;
$staticFontPath:    /static/fonts;


/*  COLOR PALETTE */
/*  ------------------------- */

/*  Enterprise */
$splunkGray: 	         #97999B;
$splunkGreen:            #65A637;

/*  Light */
$splunkLiteOrange:       #F58220;
$splunkLiteBlack:        #333;

/*  Grayscale - DO NOT USE DIRECTLY WHENEVER POSSIBLE!!! Use text, border or table variables instead. */
$black:                 #000;
$grayDarker:            #222;
$grayDark:              #333;
$gray:                  #555;
$grayLight:             #999;
$grayLightMedium:       #ccc;
$grayLighter:           #eee;
$offWhite:              #f3f3f3;
$white:                 #fff;

/*  Accent colors */
$blue:                  #1e93c6; /* sky */
$blueDark:              #3863a0;
$green:                 #a2cc3e;
$red:                   #d6563c;
$yellow:                #f2b827;
$yellowLight:           color($yellow l(+28%));
$yellowLighter:         color($yellow l(+38%));
$orange:                #ed8440;
$pink:                  #cc5068;
$purple:                #6a5c9e;
$teal:                  #11a88b;

$focusColor:            #52A8EC;


/*  TYPOGRAPHY */
/*  ------------------------- */
$baseFontSizeLarge:     16px;
$baseFontSize:          12px;
$baseFontSizeSmall:     11px;
$baseLineHeight:        16px; /*  18px; */

$fontSizeLarge:         calc($baseFontSize * 1.25);
$fontSizeSmall:         calc($baseFontSize * 0.85);
$fontSizeMini:          calc($baseFontSize * 0.75);

$serifFontFamily:       Georgia, "Times New Roman", Times, serif;
$sansFontFamily:        "Ubuntu", "Roboto", "Droid", "Helvetica Neue", Helvetica, Arial, sans-serif;
$monoFontFamily:        'Droid Sans Mono', 'Consolas', 'Monaco', 'Courier New', Courier, monospace;
$baseFontFamily:        $sansFontFamily;

$textColor:             #333;
$textGrayDark:          #666;
$textGray:              #999;
$textDisabledColor:     #bbb;
$placeholderText:       $textGray;

$textTileColor:     	#ccc; /*  Lite listing pages */

$headingsFontFamily:    inherit; /*  empty to use BS default, $baseFontFamily */
$headingsFontWeight:    bold;    /*  instead of browser default, bold */
$headingsColor:         inherit; /*  empty to use BS default, $textColor */

$linkColor:            #0095cf;
$linkColorHover:       color($linkColor l(-20%));


/*  SCAFFOLDING */
/*  ------------------------- */
$borderDarkColor: 		#999;
$borderColor: 			#ccc;
$borderLightColor: 	    #d5d5d5; /*  aliases: $tableBorderColor $tableBorderColorVertical */
/*  also see: $interactiveBorderColor */

$baseBorderRadius: 			 2px;
$containerBorderRadius: 	 0;      /* For containers without a wrapper */
$containerOuterBorderRadius: 0;  /* For for containers with a wrapper, like popdown */
$containerInnerBorderRadius: 0;
$borderRadiusLarge:          6px;
$borderRadiusSmall:          3px;

$bodyBackgroundColor:   	       $offWhite;
$containerBackgroundColor:         $white;
$containerBackgroundGradientStart: $white;

$sideNavWidth:          300px;

$paddingLarge:          11px 19px; /*  44px */
$paddingSmall:          2px 10px;  /*  26px  */
$paddingMini:           0 6px;   /*  22px */

$hrBorder:              $grayLighter;


/*  Horizontal forms & lists */
/*  ------------------------- */
$horizontalComponentOffset:       180px;


/*  Z-INDEX */
/*  ------------------------- */
/*  If a variable does not suit your purpose, set a value relatively such as, $zindexModal +1 */
$zindexHeaderTable:       406;
$zindexDropdown:          1000;
$zindexPopover:           1010;
$zindexTooltip:           1020;
$zindexFixedNavbar:       1030;
$zindexSideNavBackdrop:   1032; /*  Splunk Lite */
$zindexSideNav:           1034; /*  Splunk Lite */
$zindexSideBarBackdrop:   1036; /*  Sidebar Component */
$zindexSideBar:           1038; /*  Sidebar Component */
$zindexModalBackdrop:     1040;
$zindexModal:             1050;
$zindexPopdown:           1060; /*  timerange popdown needs to be above modal + backdrop */
$zindexTooltip:           1070; /*  top interactive element */
$zindexDatePicker:        1070; /*  top interactive element */
$zindexModalNoConnection: 1080; /*  top uninteractive */
$zindexModalDisconnect:   1090; /*  top uninteractive */


/*  TABLES */
/*  ------------------------- */

$tableBackground:                   transparent; /*  overall background-color */
$tableBackgroundHover:              #e4e4e4; /*  for hover */
$tableBackgroundAccent:             #eee; /*  for striping */
$tableBackgroundAccentHover:        $tableBackgroundHover; /*  for striping */
$tableBackgroundFocus:				color($focusColor a(12%) s(100%));
$tableBorder:                       #333; /*  table and cell border */
$tableBorderVertical:               $borderLightColor; /*  table and cell border */
$tableSortIconColor:                #bbb; /*  table and cell border */
$tableTextDisabledColor:            #7C7C7C;


/*  FORMS */
/*  ------------------------- */
$inputHeight:                   calc($baseLineHeight + 10px); /*  base line-height + 8px vertical padding + 2px top/bottom border */
$inputBackground:               $white;
$inputBorder:                   $borderColor;
$inputBorderRadius:             $baseBorderRadius; /*  This is generally overridden. */
$inputDisabledBackground:       $grayLighter;

$formActionsBackground:         $offWhite;

$warningText:             		color($yellow l(-10%));
$warningBackground:       		$yellowLighter;
$warningBorder:           		color($yellow l(-10%));

$errorText:               		$red;
$errorBackground:         		color($red l(+40%));
$errorBorder:             		$red;

$successText:             		$green;
$successBackground:       		color($green l(+40%));
$successBorder:           		$green;

$infoText:                		#3a87ad;
$infoBackground:          		#d9edf7;
$infoBorder:              		color($infoBackground h(-10) l(-7%));


/*  BASE INTERACTIVE */
/*  -------------------------- */
/*  text */
$interactiveColor:                  $white;
/*  background */
$interactiveBackgroundColor:        $interactiveColor;
$interactiveDisabledBackgroundColor:#ccc;
$interactiveGradientStartColor:     $interactiveColor;;
$interactiveGradientEndColor:       $interactiveColor;
$interactiveBackgroundColorHover:   #efefef;
$interactiveGradientStartColorHover:$interactiveBackgroundColorHover;
$interactiveGradientEndColorHover:  $interactiveBackgroundColorHover;
/*  borders */
$interactiveBorderColor:            $splunkLiteBlack;
$interactiveBorderTopColor:         $splunkLiteBlack;
$interactiveBorderBottomColor:      $splunkLiteBlack;
$interactiveBorderColorHover:       color($interactiveBorderColor l(+3%));
$interactiveBorderTopColorHover:    $splunkLiteBlack;
$interactiveBorderBottomColorHover: $splunkLiteBlack;
$interactiveBorderRadius:           $baseBorderRadius; /* these can't be different without breaking button groups. */
/*  shadow */
$interactiveBoxShadow:              none;
$interactiveBoxShadowHover:         none;
$interactiveBoxShadowActive:        inset 0px 2px 2px rgba(0, 0, 0, 0.125);


/*  BASE INTERACTIVE ERROR */
/*  -------------------------- */
/*  text */
$interactiveErrorTextColor:              $errorText;
/*  background */
$interactiveErrorBackgroundColor:        color($errorBackground blend($red 20%));
$interactiveErrorGradientStartColor:     $interactiveErrorBackgroundColor;
$interactiveErrorGradientEndColor:       color($errorBackground blend($red 40%));
$interactiveErrorBackgroundColorHover:   color($errorBackground blend($red 10%));
$interactiveErrorGradientStartColorHover:$interactiveErrorBackgroundColorHover;
$interactiveErrorGradientEndColorHover:  color($errorBackground blend($red 30%));
/*  borders */
$interactiveErrorBorderColor:            color($errorBackground blend($red 80%) s(-30%));
$interactiveErrorBorderTopColor:         $interactiveErrorBorderColor;
$interactiveErrorBorderBottomColor:      $interactiveErrorBorderColor;
$interactiveErrorBorderColorHover:       color($errorBackground blend($red 75%) s(-30%));
$interactiveErrorBorderTopColorHover:    $interactiveErrorBorderColorHover;
$interactiveErrorBorderBottomColorHover: $interactiveErrorBorderColorHover;

$btnBoxShadowFocus:					0 0 8px color($focusColor a(60%));

/*  PRIMARY BUTTONS */
/*  -------------------------- */
/*  text */
$primaryTextColor:                  $white;
/*  background */
$primaryBackgroundColor:            $splunkLiteBlack;
$primaryGradientStartColor:         $splunkLiteBlack;
$primaryGradientEndColor:           $splunkLiteBlack;
$primaryBackgroundColorHover:       #464646;
$primaryGradientStartColorHover:    $primaryBackgroundColorHover;
$primaryGradientEndColorHover:      $primaryBackgroundColorHover;
/*  borders */
$primaryBorderColor:                $splunkLiteBlack;
$primaryBorderTopColor:             $splunkLiteBlack;
$primaryBorderBottomColor:          $splunkLiteBlack;
$primaryBorderColorHover:           #464646;
$primaryBorderTopColorHover:        #464646;
$primaryBorderBottomColorHover:     #464646;
/*  shadow */
$primaryBoxShadow:              	none;
$primaryBoxShadowHover:         	none;
$primaryBoxShadowActive:    		inset 0px -2px 2px rgba(255, 255, 255, 0.125);


/*  PILL BUTTONS */
/*  -------------------------- */
/*  text */
$pillTextColor:                     $linkColor;
$pillTextColorHover:                $linkColorHover;
/*  background */
$pillBackgroundColorHover:          #ddd;
$pillBackgroundColorFocus:          color($focusColor a(12%) s(100%));


/*  BUTTONS */
/*  ------------------------- */
/*  Used in non-standard buttons - Legacy Bootstrap classes only */
$btnSuccessBackground:              #62c462;
$btnSuccessBackgroundHighlight:     #51a351;

$btnDangerBackground:               #ee5f5b;
$btnDangerBackgroundHighlight:      #bd362f;


/*  COMPONENT VARIABLES */
/*  -------------------------------------------------- */

/*  Navbar */
/*  ------------------------- */

$navbarCollapseWidth:             979px;
$navbarCollapseDesktopWidth:      calc($navbarCollapseWidth + 1px);

$navbarHeight:                    40px;
$navbarHeightLite:                40px; /* Fixes issue for escaped Dashboards. */
$navbarBackgroundHighlight:       #ffffff;
$navbarBackground:                $splunkLiteBlack;
$navbarBorder:                    color($navbarBackground l(-12%));

$navbarText:                      #777;
$navbarLinkColor:                 #777;
$navbarLinkColorHover:            $grayDark;
$navbarLinkColorActive:           $gray;
$navbarLinkBackgroundHover:       transparent;
$navbarLinkBackgroundActive:      color($navbarBackground l(-5%));

$navbarBrandColor:                $navbarLinkColor;

/*  Inverted navbar */
$navbarInverseBackground:                #111111;
$navbarInverseBackgroundHighlight:       #222222;
$navbarInverseBorder:                    #252525;

$navbarInverseText:                      $grayLight;
$navbarInverseLinkColor:                 $grayLight;
$navbarInverseLinkColorHover:            $white;
$navbarInverseLinkColorActive:           $navbarInverseLinkColorHover;
$navbarInverseLinkBackgroundHover:       transparent;
$navbarInverseLinkBackgroundActive:      $navbarInverseBackground;

$navbarInverseSearchBackground:          color($navbarInverseBackground l(+25%));
$navbarInverseSearchBackgroundFocus:     $white;
$navbarInverseSearchBorder:              $navbarInverseBackground;
$navbarInverseSearchPlaceholderColor:    #ccc;

$navbarInverseBrandColor:                $navbarInverseLinkColor;


/*  Tooltips and popovers */
/*  ------------------------- */
$tooltipColor:            #fff;
$tooltipBackground:       rgba(0,0,0,0.9);
$tooltipArrowWidth:       5px;
$tooltipArrowColor:       $tooltipBackground;


/*  GRID */
/*  -------------------------- */
/*  Default 940px grid */
$gridColumns:             12;
$gridColumnWidth:         60px;
$gridGutterWidth:         20px;
$gridRowWidth:            calc(($gridColumns * $gridColumnWidth) + ($gridGutterWidth * ($gridColumns - 1)));
/*  Fluid grid */
$fluidGridColumnWidth:    6.382978723%;
$fluidGridGutterWidth:    2.127659574%;

/*  1200px min */
$gridColumnWidth1200:     70px;
$gridGutterWidth1200:     30px;
$gridRowWidth1200:        calc(($gridColumns * $gridColumnWidth1200) + ($gridGutterWidth1200 * ($gridColumns - 1)));

/*  768px-979px */
$gridColumnWidth768:      42px;
$gridGutterWidth768:      20px;
$gridRowWidth768:         calc(($gridColumns * $gridColumnWidth768) + ($gridGutterWidth768 * ($gridColumns - 1)));


/*  Fluid grid */
/*  ------------------------- */
$fluidGridColumnWidth:    6.382978723%;
$fluidGridGutterWidth:    2.127659574%;

/*  1200px min */
$fluidGridColumnWidth1200:     calc($gridColumnWidth1200 / $gridRowWidth1200);
$fluidGridGutterWidth1200:     calc($gridGutterWidth1200 / $gridRowWidth1200);

/*  768px-979px */
$fluidGridColumnWidth768:      percentage(100% * $gridColumnWidth768 / $gridRowWidth768);
$fluidGridGutterWidth768:      calc(100% * $gridGutterWidth768 / $gridRowWidth768);


/*  Responsive Variables */
$responsive-screen-height: 700px;


/*  SELECTORS FOR CUSTOMIZING SPECIFIC LOCALES */
/*  -------------------------- */
$wideTextLocaleSelector: body.locale-de;


/*  BUILD COMMENT */
/*  -------------------------- */
/*  Hide the Build Comment. The make file sets this to true */
$buildComment: false;

/*  LEGACY BUILD */
/*  -------------------------- */
/*  This is set to true when building the less for splunk components. */
$version5AndEarlier: false;
