.shared-jobstatus {
    @mixin clearfix;
    clear:both;
    min-height:22px;
    margin-top: 5px;
    padding: 0 20px 5px 20px;
    position: relative;

    .loader {
        float: left;
        margin-right: 5px;
        margin-top: 2px;
    }

    .view-scanned {
        line-height: 19px;
        min-height: 19px;
        margin-right:6px;
    }

    .icon-warning-paused {
        color: $yellow;
        font-size: 200%;
        display: inline-block;
        margin-right: 3px;
        vertical-align: middle;
        line-height: 16px;
    }

    .status {
        padding: 5px 0;
        margin-right: 5px;
        float: left;

        .icon-check {
            color: $splunkGreen;
        }
    }

    .sampling-mode {
        float: left;
    }
}

.export-print-group {
    margin-right: 20px;

    .icon-share, .icon-print, .icon-export {
        font-size: 15px;
    }

}

