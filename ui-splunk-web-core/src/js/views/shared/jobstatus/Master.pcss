.shared-jobstatus-samplingmode-dialog {
    .control {
        display: inline-block;
        input {
            margin: 0 5px;
            width: 45px;
            padding-right: 10px;
        }
    }
    .alert {
        padding-right: 0px;
        margin-bottom: 10px;
    }
}

.shared-jobstatus-searchmode {
    margin-left: 5px;
    position: relative;

    > .btn-pill {
        padding-left: 20px;

         > [class^="icon-"],
         > [class*=" icon-"] {
            font-size:15px;
            line-height: 20px;
            width: 20px;
            text-align: center;
            position: absolute;
            top: 3px;
            left: 0;
        }
    }
}

.shared-jobstatus-buttons {
    margin-left: 5px;
}

.shared-jobstatus-autopause {
    clear:both;
    padding-top: 10px;
    > .alert {
        margin-bottom: 0;
    }
}

.shared-jobstatus-buttons-sharedialog {
    .control-label {
        width: 140px;
    }
    .controls {
        margin-left: 160px;
    }
    .icon-bookmark {
        font-size: 16px;
    }
    .bookmark > ir {
        width: 0;
    }

    p {
        margin-bottom: 20px;
    }
}

.shared-jobstatus-buttons-sharedialog {
    .control-label {
        text-align: left;
    }
    .control-label {
        width: 100px;
    }
    .controls {
        margin-left: 120px;
    }
}

/* style for views/shared/jobstatus/buttons/ExportResultsDialog.js */
.shared-jobstatus-buttons-exportresultsdialog .rerun-msg a {
    white-space: nowrap;
}

/*  Print */
/*  -------------------------------------------------- */
@media print {
    .shared-jobstatus-buttons,
    .shared-jobstatus-searchmode,
    .shared-jobstatus-spinner,
    .tooltip {
        @mixin print-hide;
    }
}
