/*  Splunk: Component: time range picker */
/*  =================================== */
/*  FIXME: remove old classes */

/* time range picker dialog

	markup missing ...

*/
.shared-timerangepicker-dialog {
	width: 640px;

	td {
		vertical-align: top;
	}

    .mdy-input {
        width: 65px;
    }

    .hms-input {
        width: 70px;
    }
}

/*  time range menu? */
.timeRangeMenu, .trpCustomDateTime {
	display: none;
}

/*  help block? FIXME: this should use control-feedback */
.help-block-timestamp {
	min-height: 1em;
	line-height: 1em;
	padding: 3px;
	margin-top: -5px;
	margin-right: 15px;
	border-radius:3px;
	background-color: $grayLighter;
}

.timerangepicker-range-type {
	margin-right: 15px;
	float: left;
}

.timerangepicker-range-type .btn {
	min-width: 65px;
}

/* To Do: This is specific to the Alert Editor should be moved. */
.btn.timerange-control > .icon-triangle-right-small {
  padding-left: 5px;
}


input.timerangepicker-earliest-date {
	margin-right: 0;
}

input.timerangepicker-real-time-earliest-time,
input.timerangepicker-relative-earliest-time {
	margin-right: 0;
}

.timerangepicker-realtime_range_type,
.timerangepicker-relative_range_type {
	display: inline-block;
	vertical-align: middle;
	margin-right: 25px;
}

.form-inline .radio {
	line-height: 18px;
	padding-top:5px;
	padding-bottom: 5px;
	display: block;
}

.form-inline .radio + .radio {
	padding-top:0;
}

.shared-timerangepicker-dialog-daterange-afterdate input {
    margin-right: 5px;
}

input.date-before-time {
	margin-right: 5px
}

.relative-time-container,
.real-time-container,
.advanced-container {
    > .timeinput.latest {
        margin-left: 20px;
    }

    > .apply {
        margin-top: 18px;
        margin-left: 20px;
    }

    .control-label {
        margin-bottom: 2px;
    }
}

/*  PRESETS ACCORDIAN */
.presets-container {
    .presets-group {
        float: left;
        width: 130px;
    }

    .presets-group + .presets-group {
        margin-left: 10px;
    }

    .presets-divider-wrap {
        float: left;
        margin: 10px;
    }

    .presets-divider {
        position: absolute;
        top: 10px;
        bottom: 10px;
        border-right: 1px dotted $borderColor;
    }

    .presets-group li {
        color: $textGray;
        padding-left: 20px;
        text-indent: -20px;
        overflow: hidden;
        text-overflow: ellipsis;
    }
}

/*  RELATIVE ACCORDIAN and REALTIME ACCORDIAN */
.relative-time-container, .real-time-container {

    input , .uneditable-input {
        width: 4em;
    }

    /*  reset other input types */
    input[type="file"],
    input[type="image"],
    input[type="submit"],
    input[type="reset"],
    input[type="button"],
    input[type="radio"],
    input[type="checkbox"]
    {
        width: auto;
    }

    .col-1, .col-2, .apply {
        float: left;
    }

    /*  i18n might need some magic for long input append btn txt */
    .input-append .btn  {
        max-width: 8em;
        overflow: hidden;
        text-overflow: ellipsis;
    }
}

/*  RELATIVE ACCORDIAN */
.relative-time-container {
    .help-block-timestamp {
        margin-top: -3px;
    }

    input[type="radio"] {
        margin-top: 0px;
    }

    > .timeinput.latest {
        margin-left: 40px;
    }
}

/*  DATE RANGE and DATE & TIME RANGE ACCORDIAN */
.date-range-container {
    overflow: hidden;

    .shared-controls-datecontrol {
        display: inline-block;
    }

    .time-between-dates {
        @mixin clearfix;
        float: left;
        margin-right: 15px;

        .col-1, .col-2 {
            float: left;
        }

        input {
            margin-right: 0px;
        }

        .time-hms > span {
            margin-left: 0.5em;
        }

        .help-block {
            display: block;
            /* fix for SPL-103945 */
            word-wrap: normal;
        }

        .help-block.up-to-now {
            float: left;
            margin:0px 4px;
        }

        .control-label {
            float: left;
            margin-left: 1em;
            margin-right: 1em;
        }
    }
}

/*  ADVANCED ACCORDIAN */
.advanced-container {
    .control-group{
        width: 50%;
        float: left;
    }

    > .btn-documentation {
        margin-left: 20px;
    }
}

/*  TODO: wrap this */
.btn-documentation {
  line-height:22px;
  white-space: nowrap;
}
