/*  Messages styles in Splunk Bar */
/*  ======================= */

.view {
    width: 360px;
}

.footer {
    composes: footer from '../../MenuDialog.pcssm';
    text-align: right;
}

.noMessages {
    composes: body from '../../MenuDialog.pcssm';
    padding: 10px;
    color: $textColor;
    text-align: center;
    min-width: 200px;
    background: $white;
}

.messageList {
    max-height: calc(100vh - 100px);
    overflow-y: auto;
    width: 360px;
    margin: 0;
}

.splunkMessagesDivider {
    border-top: 1px solid $borderColor;
    height: 0px;
}

/*  messages dialog overrides */
.deleteAllMessages {
    margin: 0;
}
