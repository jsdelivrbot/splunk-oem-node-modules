
.view {
	display: inline-block;
	width: 155px;
	position: relative;
	padding: 2px 20px 0 30px;
	margin-bottom: 20px;
	color: $textColor;
	vertical-align: top;
}

.heading {
	color: $textGray;
	font-size: $fontSizeSmall;
	text-transform: uppercase;
	font-weight: normal;
	margin: 0;
    line-height: 16px;
}

.list {
	margin: 0;
}

.icon {
	font-size: 25px;
	position: absolute;
	left: 2px;
	top: 2px;
	height: 25px;
	width: 22px;
	color: $textGray;
	opacity: 0.8;
	text-align: center;
}

.link {
	@mixin link;
	line-height: 20px;
	text-indent: -10px;
	padding-left: 10px;
    display: block;

}
