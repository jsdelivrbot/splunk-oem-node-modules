}
.virtualindexes-archivegrid {
    .expanded-info {
        padding-top: 1em;
    }

  .col-info {
    width: 1em;
  }

  .col-selected {
    width: 1em;
  }

  .checkbox {
    padding: 0px 0px 0px 0px;
  }

  .bandwidth-header {
    white-space: nowrap;
  }

}
.virtualindexes-archivegridrow {
  .checkbox {
    margin-top: -5px;
  }
