	clear: both;
	margin: 10px -20px;
}

.tab-pane {
	min-height: 420px;
}

.col-flex {
	/*  width: auto; */
}
.col-slim {
	width: 140px;
}
.col-100 {
	width: 100px;
}

td a + a {
	margin-left: 10px;
}
td span + a {
  margin-left: 10px;
}
.enableAction {
    margin-left: 10px;
}
.disableAction {
  margin-left: 13px;
}
.virtualindexes-userimpersonationtab .uneditable-input {
  width: 600px;
