/*  Splunk: Variables
/*  ================================================== */

$theme: enterprise;

/**  Brand Colors
/*  ------------------------- */

$splunkGray: 	   #97999B;
$splunkGreen:      #65A637;

$splunkLiteOrange: #f58220;
$splunkLiteBlack:  #333;

$brandColor:       $splunkGreen;

/**  Grayscale
/*  -------------------------
/* Do not use directly whenever possible. Use text or border variables instead. */
$black:  #000;
$gray13: #222;
$gray20: #333;
$gray33: #555;
$gray60: #999;
$gray80: #ccc;
$gray93: #eee;
$gray96: #f5f5f5;
$white:  #fff;


/**  Semantic Colors
/*  ------------------------- */
$warningColor:           #f1b10e;
$warningBackgroundColor: color($warningColor l(+38%));

$alertColor:             #ed8440;
$alertBackgroundColor:   color($alertColor l(+38%));

$errorColor:             #d6563c;
$errorBackgroundColor:   color($errorColor l(+40%));

$successColor:           $splunkGreen;
$successBackgroundColor: color($splunkGreen l(+40%));

$infoColor:              #3a87ad;
$infoBackgroundColor:    #d9edf7;


/**  Usage-based Colors
/*  ------------------------- */
$textColor:         #333;
$textGray:          #999;
$textDisabledColor: #bbb;

$linkColor:         #1e93c6;
$linkColorHover:    #3863a0;

$focusColor:        #52A8EC;

$borderLightColor:  color($black l(84%));
$borderColor: 	    $gray80;
$borderDarkColor:   $gray60;
$borderInteractiveColor: color($black l(75%));

$backgroundColorHover:            color($black a(5%));
$backgroundColorFocusTransparent: color($focusColor a(12%) s(100%));
$backgroundColorFocusOpaque:      color($focusColor blend($white 88%) s(100%));


/**  Syntax Colors
/*  -------------------------
/* The following colors should only be used for syntax coloring of code. */
$syntaxBlue:   #1e93c6;
$syntaxBrown:  #a67f59;
$syntaxGray:   #999999;
$syntaxGreen:  #65A637;
$syntaxOrange: #ed8440;
$syntaxPink:   #cc5068;
$syntaxPurple: #6a5c9e;
$syntaxRed:    #d6563c;
$syntaxTeal:   #11a88b;


/**  Fonts */
/*  ------------------------- */
$baseFontSize:          12px;
$fontSizeSmall:         11px;
$fontSizeLarge:         16px;
$baseLineHeight:        16px;

$serifFontFamily:       "Splunk Platform Serif", Georgia, "Times New Roman", Times, serif;
$sansFontFamily:        "Splunk Platform Sans", Roboto, "Helvetica Neue", Helvetica, Arial, sans-serif;
$monoFontFamily:        "Splunk Platform Mono", "Droid Sans Mono", Consolas, Monaco, "Courier New", Courier, monospace;
$baseFontFamily:        $sansFontFamily;


/**  Scaffolding */
/*  ------------------------- */
$baseBorderRadius:      4px;
$borderRadiusSmall:     3px;


/**  Layers
/*  -------------------------
/*  If a variable does not suit your purpose, set a value relatively such as, $zindexModal +1 */
$zindexFixedNavbar:   1030;
$zindexModalBackdrop: 1040;
$zindexModal:         1050;
$zindexPopover:       1060;


/**  Shadows
/*  ------------------------- */
$focusShadow:	    0 0 8px color($focusColor a(60%));
$fixedNavbarShadow: 0 4px 8px rgba(0,0,0,0.2);


/*  Form Sizes */
/*  ------------------------- */
$inputHeight:                   26px;
$inputHeightSmall:              22px;
$inputHeightLarge:              40px;
