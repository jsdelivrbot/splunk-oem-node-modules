/*  Splunk: Mixins */
/*  ================== */
/*  Snippets of reusable CSS to develop faster and keep code readable */

@import "mixins.shared.pcss";

/*  Interactive */
/*  -------------------------------------------------- */
/*  These are by any element that can be clicked, such as buttons, menus and table headings. */
@define-mixin interactive  {
	background: $white;
	border: 1px solid $borderInteractiveColor;
	color: $textColor;
}

/*  Hover state */
@define-mixin interactive-hover  {
	background: #efefef;
	border-color: color($borderInteractiveColor l(+3%));
}


/*  Interactive Error */
/*  These are by any interactive element that is is in an error state */
@define-mixin interactive-error  {
	border-color: color($errorColor l(62%));
    background: $white;
	color: $errorColor;
}

@define-mixin interactive-error-hover  {
    border-color: color($errorColor l(62%));
    background: #efefef;
    color: $errorColor;
}

/*  Interactive warning */
/*  These are by any interactive element that is is in an error state */
@define-mixin interactive-warning  {
	border-color: color($warningColor l(62%) s(-30%));
    background: $white;
	color: $warningColor;
}

@define-mixin interactive-warning-hover  {
    border-color: color($warningColor l(62%) s(-30%));
    background: #efefef;
    color: $warningColor;
}

/*  primary */
@define-mixin interactive-primary  {
	background: $splunkLiteBlack;
	border: 1px solid $splunkLiteBlack;

	color: $white;
	box-shadow: none;
	text-shadow: none;
	border-radius: $baseBorderRadius;
}

/*  primary hover state */
@define-mixin interactive-primary-hover  {
	background-color: #464646;
	color: $white;
    text-decoration:none;
}
