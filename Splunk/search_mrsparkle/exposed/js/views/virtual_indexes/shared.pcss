/*  Splunk: Component: Admin Content */
/*  ================================= */

/*
	admin form for adding new vix
*/
.admin-content.dashboard-panel {
  border: 1px solid $borderColor;
  background-color: $white;
  padding: 15px 15px 10px 15px;
  border-radius: 4px;
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.08) ;

  margin: 50px auto;
  width: 600px;

  h5 {
    margin-top: 40px;
    margin-bottom: 10px;
    color: $splunkGreen;
    font-weight: bold;
  }

  input,
  textarea,
  select {
    margin-bottom: 0;
  }

  .control-group {
    margin-bottom: 10px;
  }

  #basic {
    h5 {
      margin-top: 0;
    }
  }
  .button-wrapper {
    margin: 20px -15px -10px;
    padding: 20px 15px 45px;
    background: $offWhite;
    border-top: 1px solid $interactiveBorderTopColor;
    border-bottom-right-radius: 4px;
    border-bottom-left-radius: 4px;
  }
}
