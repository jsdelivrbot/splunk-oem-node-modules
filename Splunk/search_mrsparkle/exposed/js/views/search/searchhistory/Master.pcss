.search-history {
  margin-top: -5px;
  .history-content {
    padding-top: 10px;
    margin: 0 -30px;

    .btn {
      line-height: 16px;
    }

    .table {
      margin: 50px 0 -31px 0;
    }

    .history-filters {
      position: absolute;
      float: left;
      padding-left: 20px;
    }

    .pagination {
      padding-right: 20px;
    }

    .shared-controls-controlgroup {
      margin-left: 210px
    }

    .time-selected {
      margin: -5px 0 0 10px;
      display: inline-block;
    }

    .count-selected {
      margin: 0 0 0 10px;
    }

    .time-ran-header {
      width: 150px;
    }

    .actions-header {
      width: 100px;
    }

    .history-group {
      padding: 5px;
    }

    .search-history-row {

      td.search {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
      }
      
      td.search-action {
        > a {
          text-decoration: none;
        }
      }

      td.details {
        > span {
          word-wrap: break-word;
          white-space: pre-wrap;
        }
      }
    }

    td.disabled {
      opacity: 0.1;
      > a {
        cursor: default;
      }
    }

    tr.waiting, tr.noresults {
      > td {
        text-align: center;
      }
    }
  }
  .search-history-label {
    padding: 0 0 10px 20px;
    a.show-history {
      text-decoration: none;
      > span {
        padding-left: 5px;
      }
    }
  }
}

/*  Lite UI */
/*  -------------------------------------------------- */

@if $theme == lite {
  .search-history {
    border-top: 1px dotted #CCC;
    clear: both;
    .history-content {
      margin: 0;
      .table {
        margin: 50px 0 -1px;
      }
    }
  }
}
