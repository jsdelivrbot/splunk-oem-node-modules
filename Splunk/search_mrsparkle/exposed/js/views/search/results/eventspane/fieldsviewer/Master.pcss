/*  Splunk: Component: Fields Viewer */
/*  ================================ */
.search-results-eventspane-fieldsviewer {
    clear:both;
    margin-top: 0;
    float: left;
    /*  margin-left: -240px; */
    width: 240px;
    padding: 0 0 20px 0;
    border-top: 1px solid $borderColor;
    position: relative;

    .remove {
        margin-left: -10px;
        margin-right: 10px;
    }

    .all {
        float: right;
        margin-right: -10px;
    }

    h6 {
        font-size: $baseFontSize;
        padding-left: 20px;
        font-weight: normal;
        margin: 20px 0 2px 0;
    }

    .fields-controls {
        min-height: 36px;
    }

    .fields-controls-inner {
        padding: 5px 20px 0 20px;
        position: relative;
        z-index: 31;
        min-height: 31px;
    }

    .fields-controls-inner.affix-top {
        position: fixed;
        top: 0;
        left: 0;
        width: 200px;
        line-height: 29px;
        max-height: 56px;
        margin-bottom: -1px;
        border-bottom: 1px solid $borderColor;
        background-color: $white;
    }

    ol {
        list-style: none;
        margin: 0;
    }

    ol > li > a {
        display:block;
        padding: 1px 20px 1px 32px;
        line-height: 20px;
        margin: -2px 0;        
        word-break: break-all;
        word-wrap: break-word;

        &:hover,
        &.active {
            background-color: $grayLighter;
            text-decoration: none;
        }
        
        &:focus {
        	@mixin focus-pill;
        }

        .font-icon {
            float: left;
            width: 12px;
            color: $textGray;
            margin-left: -12px;
        }
        .field-count {
            color: $textGray;
            padding-left: 3px;
        }
    }

    .additional-fields, .extract-fields-button, .open-table-link {
        display: block;
        padding:  2px 20px 2px 32px;
        
        &:focus {
        	@mixin focus-pill;
        }
        &.disabled {
            color: @textDisabledColor;
            cursor: not-allowed;
            text-decoration: none;
        }
    }

    .additional-fields, ol + .extract-fields-button {
        margin-top: 20px;
    }    

}

/*  Print */
/*  -------------------------------------------------- */
@media print {
    .fields-controls {
        @mixin print-hide;
    }
    .search-results-wrapper, .search-results-eventspane-fieldsviewer {
        @mixin print-no-background;
    }
}
