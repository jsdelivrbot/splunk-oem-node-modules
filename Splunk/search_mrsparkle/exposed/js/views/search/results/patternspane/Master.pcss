.tab-pane-patterns {
    position: relative;
    min-height: inherit;

    .patterns-container {
        position: relative;
        min-height: inherit;

        .pattern-controls-and-table {
            margin-right: 401px;
        }

        .progress-bar {
            bottom: 0;
        }

        .slider-control {
            float: right;
            margin-top: -18px;
        }

        .alert.waiting {
            .shared-waitspinner {
                position: absolute;
                left: 0px;
                top: 8px;
            }
        }

        .control-group, .control-group .control-label {
            margin-bottom: 0px;
        }

        .pattern-controls {
            min-height: 15px;
            border-bottom: 1px solid lightgray;
            padding: 0 20px 20px 20px;
            position: relative;
            .alerts {
                clear: right;
            }
            .alert {
                margin-top: 0;
                margin-bottom: 0px;
            }
            .regenerate {
                .alert {
                    margin-top: 16px;
                }
            }
        }

        .pattern-table.search-disabled {
            opacity: 0.6;
        }

        .pattern-table {
            width: 100%;
            cursor: default;

            tbody.patterns {
                tr {
                    transition: background-color .2s, color .2s;
                    td {
                        padding-top: 10px;
                        padding-bottom: 10px;

                    }
                    .percent {
                        padding-right: 8px;
                        padding-left: 20px;
                        width: 45px;
                        box-sizing: border-box;
                        text-align: right;
                        vertical-align: top;
                    }
                    .description {
                        word-wrap: break-word;
                        word-break: break-all;

                        padding-right: 20px;
                        padding-left: 8px;

                        @if $theme == enterprise {
	                        span.includeterm {
	                            color: $splunkGreen;
	                        }
                        }

                        @if $theme == lite {
                            span.includeterm {
                        		color: $splunkLiteOrange;
                        	}
                        }

                        span.timestamp {
                            color: $textGray;
                            transition: color .2s;

                            &:before {
                            	content: "\003c";
                            }

                            &:after {
                            	content: "\003e";
                            }
                        }
                    }


                    .sample-event {
                        max-height: 58px;
                        overflow: hidden;
                    	position: relative;
                    	overflow: hidden;

                    	&:after {
                    	    content: '';
                    	    display: block;
                    	    position: absolute;
                    	    left: 0;
                    	    right: 0;
                    	    top: 42px;
                    	    height: 16px;
                    	    transition: background .2s linear;
                    	    @mixin gradient-vertical color($white a(0)), $white;
                    	    background-color: transparent;
                    	}
                    }

                    &.expanded {
                        div.sample-event {
                            max-height: 200px;
                            color: #b3b3b3;
                        }
                    }
                    &.selected {
                        background-color: $blueDark;
                        color: $white;


						@if $theme == enterprise {
						    span.includeterm {
						        color: $green;
						    }
						}

                        .sample-event:after {
                        	display: none;
                        }
                    }
                }
            }

            &:not(.search-disabled) tbody.patterns tr:hover:not(.selected)  td {
                $rolloverColor: color($blueDark l(+50%));
                background-color: $rolloverColor;
                    .sample-event:after {
                        @mixin gradient-vertical color($rolloverColor a(0%)), $rolloverColor;
                    }
            }
        }

        .pattern-details {
            width: 401px;
            position: absolute;
            right: 0;
            top: -20px;
            bottom: 0;
            background-color: $bodyBackgroundColor;
            box-sizing: border-box;
            border-left: 1px solid $borderColor;

            .documentation {
                float: right;
                margin: 20px 20px 0 0;
            }

            .pattern-details-none {
                overflow: hidden;
                text-align: center;
                padding-top: 80px;

                .instruction {
                    margin-bottom: 30px;
                    svg {
                        height: 40px;
                        display: inline-block;
                        width: 40px;
                        margin: 10px;
                        vertical-align: middle;
                        fill: none;
                        stroke: $borderDarkColor;
                        stroke-width: 3;
                        stroke-linecap: round;
                        stroke-linejoin: round;

                        polygon {
                            stroke-miterlimit: 10;
                        }
                    }
                }
            }

            .pattern-details-single {
                background-color: $bodyBackgroundColor;
                position: relative;
                padding: 20px;


                .info-group {
                    margin-bottom: 20px;

                }

                .subtitle {
                    font-size: 11px;
                    color: #aaa;
                    text-transform: uppercase;
                }

                .terms-group {
                    font-family: $monoFontFamily;

                    div {
                        word-wrap: break-word;
                        margin-left: 10px;
                        text-indent: -10px;
                    }
                }

                .big-number {
                    font-size: 80px;
                    font-weight: 200;
                    line-height: 80px;
                }

                .event-type {
                    font-family: $monoFontFamily;
                    overflow-y: auto;
                    margin-bottom: 5px;
                    word-wrap: break-word;
                }

                .save-event-type {
                    margin-right: 20px;
                }
            }

            div.arrow {
                width: 0;
                height: 0;
                border-bottom: 8px solid transparent;
                border-top: 8px solid transparent;
                border-right: 8px solid $grayLighter;
                position: absolute;
                top: 0px;
                left: -9px;
            }
        }

        .pattern-details.dark {
            background-color:  color($bodyBackgroundColor l(-5%));
        }

    }
}

@media print {
    .tab-pane-patterns {
        .patterns-container {
            .pattern-controls-and-table {
                margin-right: 421px;
            }

            .icon-close {
                @mixin print-hide;
            }

            .progress-bar {
                @mixin print-hide;
            }

            .progress-animation {
                @mixin print-hide;
            }

            .progress-cursor {
                @mixin print-hide;
            }

            .progress-label {
                @mixin print-hide;
            }

            .slider-control {
                @mixin print-hide;
            }

            .alert.waiting {
                .shared-waitspinner {
                    @mixin print-hide;
                }
            }

            .pattern-controls {
                border-bottom: 0 !important;
            }

            .rule {
                @mixin print-hide;
            }

            .pattern-table {
                min-width: 0 !important;

                tbody.patterns {
                    tr {
                        .percent {
                            width: 70px !important;
                        }

                        .description {

                            span.includeterm {
                                text-decoration: underline;
                            }


						}

                        &.selected {
                            background-color: $white !important;

                            td {
                                border-top: 2px solid $borderColor !important;
                                border-bottom: 2px solid $borderColor !important;
                                background-color: $white !important;
                                -webkit-print-color-adjust: exact;
                                print-color-adjust: exact;
                            }

                            td:first-child {
                                border-left: 2px solid $borderColor !important;
                                -webkit-print-color-adjust: exact;
                                print-color-adjust: exact;
                            }

                            td:last-child {
                                border-right: 2px solid $borderColor !important;
                                -webkit-print-color-adjust: exact;
                                print-color-adjust: exact;
                            }
                        }

                        .sample-event {
                            max-height: none;

                            &:after {
                                display: none;
                            }
                        }
                    }
                }
            }

            .pattern-details {
                 border-left: 0 !important;

                .pattern-details-none {
                    @mixin print-hide;
                }

                .pattern-details-single {
                    top: 0px !important;
                    border: 2px solid $borderColor !important;
                    -webkit-print-color-adjust: exact;
                    print-color-adjust: exact;

                    a {
                       @mixin print-hide;
                    }
                }

                div.arrow {
                    @mixin print-hide;
                }
            }
        }
    }
}
