.popdown-dialog-draggable {

	@define-mixin form-reset $labelWidth {
		.control-label{
			width: $labelWidth;
			max-width: $labelWidth;
			overflow: hidden;
			text-overflow: ellipsis;
		}

		.alert-viz-control {
			margin-left: 12px;
			margin-bottom: 0px;
			padding-right: 0px;
			margin-top: -10px;
		}

		.controls{
			margin-left: calc($labelWidth + $labelLeftSpace);

			.btn [class^="icon-"], .btn [class*=" icon-"] {
				line-height: inherit;
			}

			.btn-group-2 button {
			width: 79px;
			}

			.btn-group-3 button {
			width: 53px;
			}

			.btn-group-4 button {
			width: 34px;
			}

		}
		/*  reverse the styles above if the dropdown-toggle is a child of an input-prepend */
		.input-prepend > .dropdown-toggle {
			width: auto;
			padding: 4px 12px;
		}
		/*  smaller width for input that are children of an input-prepend */
		.input-prepend > input[type="text"] {
			width: 100px;
		}
	}

	$tabbableDialogWidth: 420px;
	$tabsLabelWidth: 90px;
	$noTabsDialogWidth: 300px;
	$noTabsLabelWidth: 100px;
	$tabsLeftWidth: 98px;
	$labelLeftSpace: 10px;

	.popdown-dialog-body{
	    .vizformat-message{
		  .icon{
			color:$warningBorder;
			position:absolute;
			top: 10px;
			left:10px;
			font-size:200%;
		  }
		  .message-text{
			margin-left: 20px;
		  }
		  color:$textColor;
		  position:relative;
		  font-size:$baseFontSize;
		  padding:10px;
		  margin:0px;
		  border-bottom:1px solid $borderColor;
		}
		border-radius: 4px;

		.drag-handle {
			$handleHeight: 8px;
			$closeButtonWidth: 11px;

			height: $handleHeight;
			padding: 5px;
			cursor: move;
			z-index: 3;
			background: $interactiveColor;
			border-bottom: 1px solid $interactiveBorderColor;

			.close {
				height: $handleHeight;
				width: $closeButtonWidth;

				&:before {
					line-height: $handleHeight;
				}
			}

			.handle-inner {
				@mixin draggable-handle-background;
				height: $handleHeight;
                margin-right: calc($closeButtonWidth + 3px);
			}
		}
	}

    .non-tabbable {
        width: $noTabsDialogWidth;

        .non-tabbable-content {
            padding: 10px 10px 0;
            .form {
                @mixin form-reset $noTabsLabelWidth;
                margin-bottom: 0;
            }
        }
    }

	.tabbable {
        width: $tabbableDialogWidth;
		background: $interactiveColor;
		border-top-right-radius: 0px;
		border-bottom-right-radius: 4px;
		border-bottom-left-radius: 4px;

        .tab-content {
		    border-left: 1px solid $interactiveBorderColor;
		    margin-left: $tabsLeftWidth;
		    min-height: 200px;
            background-color: $white;
            overflow: visible;
            padding: 10px ;
			border-top-right-radius: 0px;
            border-bottom-right-radius: 4px;
            @mixin clearfix;
            .message-single{
                margin:0px;
            }
            .form {
                @mixin form-reset $tabsLabelWidth;
                float: left; /*  new context */
                width: 100%;
                margin-bottom: 0;
            }
			& > .alerts {
				padding-left: 5px;

				.alert {
					padding-right: 0;
				}
			}
        }
	}

	.nav-tabs-left {
		float: left;
		cursor: pointer;
        max-width: $tabsLeftWidth;
        overflow: hidden;
        text-overflow: ellipsis;
	}

	.nav-tabs-left > li > a {
		min-width: 74px;
		margin-right: -1px;
		border-radius: 0px;
		@mixin interactive;
		border-left: 0;
		border-top: 0;
		padding:10px 12px;
        text-overflow: ellipsis;
        overflow: hidden;
        background-color: $offWhite;
	}

	.nav-tabs-left > li:not(.active) > a:hover {
		@mixin interactive-hover;
	}

	.nav-tabs-left > li > a:focus {
	    @mixin focus-pill;
	    @mixin reset-filter;
	}


	.nav-tabs-left .active > a,
	.nav-tabs-left .active > a:hover {
		@mixin reset-filter; /*  reset filter for IE so bg color will work */
		background: $white;
		border-right-color: $white;
		cursor: default;
	}

	.tab-content{
		background-color: $white;
		border-left: 1px solid $interactiveBorderColor;
		overflow: visible;
		margin-left: $tabsLeftWidth;
		min-height: 200px;
		padding: 10px;
		border-top-right-radius: 4px;
		border-bottom-right-radius: 4px;
		@mixin clearfix;
		.message-single{
			margin:0px;
		}
		.form {
			float:left; /*  new context */
			width: 100%;
		}
	}

	.form-horizontal.error input{
			border-color: $errorBorder !important;
	}

    .populate-button-container {
        margin-left: 12%;
        padding: 10px;
        text-align: center;
    }

     .divider {
        	border-top: 1px solid $borderColor;
        	margin: 0;
        	padding-bottom: 15px;
	}
}
