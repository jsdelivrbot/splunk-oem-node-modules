/*  IMAGE TOUR CAROUSEL */
.carousel {
    width: 960px;
    height: 718px;
    background: $grayDark;
    margin-bottom: 0;
}
.carouselControl {
    top: 52%;
    background: none;
    border: none;
    color: $splunkGreen;
    opacity: 1;
    font-size: 48px;
    margin-top: -20px;
    z-index: 60;
    position: absolute;
    polygon {
        fill: $splunkGreen;
    }
    &:hover,
    &:focus {
        box-shadow: none;
        background: none;
        polygon {
            fill: color($splunkGreen l(+10%));
        }
    }
}
.previous {
    composes: carouselControl;
    left: 45px;
}
.next {
    composes: carouselControl;
    right: 45px;
}

.carouselInner {
    overflow: hidden;
    width: 100%;
    position: relative;
    [data-active=true] {
        display: block;
    }
    [data-animate=in-left] {
        animation: slideLeft 0.75s ease-in-out reverse;
        position: absolute;
    }
    [data-animate=in-right] {
        animation: slideRight 0.75s ease-in-out reverse;
    }
    [data-animate=out-left] {
        animation: slideLeft 0.75s ease-in-out;
        position: absolute;
    }
    [data-animate=out-right] {
        animation: slideRight 0.75s ease-in-out;
    }
}

@keyframes slideLeft {
    0% { transform: translateX(0%); }
    100% { transform: translateX(-100%); }
}
@keyframes slideRight {
    0% { transform: translateX(0%); }
    100% { transform: translateX(100%); }
}

.carouselItem {
    width: 960px;
    height: 716px;
    display: none;
    position: relative;
}

.carouselImage {
    display: inline;
    width: 100%;
    &:hover {
        cursor: pointer;
    }
}

.carouselIndicators {
    position: absolute;
    bottom: 18px;
    top: inherit;
    right: 50%;
    @mixin translate 50%, 0;
    z-index: 60;
    [data-active=true] {
        background-color: $splunkGreen;
    }
}
.carouselIndicator {
    display: block;
    float: left;
    height: 6px;
    width: 6px;
    cursor: pointer;
    background: $grayLight;
    border: none;
    border-radius: 5px;
    margin-left: 10px;
    margin-bottom: 0px;
    &:first-child {
        margin-left: 0;
    }
}

.tourBtn {
    background: color($black a(30%));
    position: absolute;
    top: 300px;
    left: 50%;
    padding: 30px 40px;
    font-size: 30px;
    color: $white;
    cursor: pointer;
    @mixin translate -50%, 0;
}
.startTour,
.exitTour {
    color: $splunkLiteOrange;
}
.tourGutter {
    background: color($grayDark a(90%));
    height: 132px;
    width: 962px;
    font-size: 16px;
    color: $white;
    position: absolute;
    bottom: 0px;
    z-index: 50;
    left: 50%;
    @mixin translate -50%, 0;
}
.gutterText {
    @mixin translate 0, -50%;
    margin: 0 auto;
    position: relative;
    top: 50%;
    line-height: 150%;
    width: 720px;
    text-align: center;
}
.gutterLink {
    color: $white;
    text-decoration: underline;
    &:hover {
        color: $white;
        text-decoration: underline;
    }
}

.carouselAssets {
    position: absolute;
    height: 132px;
    width: 960px;
    bottom: 0;
}

.tourLinks {
    position: absolute;
    top: 15px;
    right: 5px;
    padding: 5px;
    text-align: right;
    z-index: 50;
    font-size: 12px;
}
.tourLink {
    color: $white;
    margin-left: 15px;
    &:hover {
        color: $white;
        text-decoration: underline;
    }
}
.skipTour {
    composes: tourLink;
}
.nextTour,
.tryItNow,
.doneLink  {
    composes: tourLink;
    display: none;
}
.tryItNow {
    position: absolute;
    right: 30px;
    z-index: 500;
    bottom: 50px;
}

@media only screen and (max-height: 750px) {
    .carouselAssets,
    .tourGutter {
        position: fixed;
    }
    .carouselAssets {
        bottom: -132px;
        z-index: 60;
    }
    .carouselControl {
        top: inherit;
        bottom: 175px;
    }
    .carouselIndicators {
        bottom: 150px;
    }
    .tourLinks {
        top: inherit;
        bottom: 220px;
    }
    .tryItNow {
        top: inherit;
        bottom: 180px;
    }
}

.tourModal {
    width: 960px;
    height: 716px;
    background: $grayDark;
    z-index: calc($zindexPopdown + 2);
    &.fade.in {
        top: 15px;
    }
}

.modal-backdrop.tour-backdrop.fade {
    background: $grayDark;
    z-index: calc($zindexPopdown + 1);
    &.in {
        opacity: 1;
        background: $grayDark;
    }
}

/*  Lite UI */
@if $theme == lite {
    .tryItNow,
    .tryItNow:active,
    .tryItNow:not([disabled]):hover {
        background: $splunkLiteOrange;
    }
    .carouselIndicators [data-active=true] {
        background-color: $splunkLiteOrange;
    }
    .carouselControl {
        polygon {
            fill: $splunkLiteOrange;
        }
        &:hover polygon,
        &:focus polygon {
            fill: color($splunkLiteOrange l(+10%));
        }
    }
}
