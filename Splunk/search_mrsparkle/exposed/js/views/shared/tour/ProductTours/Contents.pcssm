/*  tour links in product tours modal */
.toursLinks {
    text-align: center;
}
.tourLink {
    position: relative;
    padding: 10px;
    margin-right: 20px;
    display: inline-block;
    color: $splunkGreen;
    border: 1px solid $grayLighter;
    &:last-child {
        margin-right: 0;
    }
    &:hover,
    &:focus {
        background: color($splunkGreen a(10%));
        transition: background 0.15s linear;
        text-decoration: none;
    }
}

.icon {
    padding: 12px 32px;
}

/*  Lite UI */
@if $theme == lite {
    .tourLink {
        color: $splunkLiteBlack;
        &:hover,
        &:focus {
            background: color($splunkLiteBlack a(10%));
        }
    }
    .icon {
        color: $splunkLiteOrange;
    }
    .sharedTourProducttoursFade {
        width: 600px;
        margin-left: -300px;
    }
}
