$container-width: 485px;

body {
    font-size: $baseFontSize;
    font-family: $baseFontFamily;
    line-height: 20px;
    color: $textDisabledColor;
    background-color: $grayDarker;
    margin: 0;
}
.body-default {
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
    background-attachment: fixed;
}
.body-default-img {
    @if $theme == enterprise {
        background: url("./login_bg_enterprise.jpg") no-repeat center center fixed;
    }
    @if $theme == lite {
        background: url("./litebackground.jpg") no-repeat center center fixed;
    }
    background-size: cover;
}

header {
    line-height: 32px;
    text-align: center;
}
h2.title {
    color: $textDisabledColor;
    font-weight: normal;
    font-size: 27px;
    white-space: nowrap;
}
a {
    color: $textGray;
    text-decoration: none;
}
a:hover {
    color: $white;
}

/* logo */
#brand{
    font-family: "Splunk Icons";
    color: $white;
    font-size: 48px;
    padding-bottom: 30px;
    margin: 8px 0;
    font-weight: normal;
}
#brand > span.prompt {
    color: $splunkGreen;
    font-weight: normal;
}
.custom-logo {
    max-height:100px;
    margin-bottom: 15px;
    display: inline-block;
    margin-left: auto;
    margin-right: auto;
}

/* layout */
.account {
    position: absolute;
    top: 33%;
    width: 100%;
}
.wrapper-container {
    width: $container-width;
    margin: 0 auto;
}
.content {
    margin-bottom: 40px;
}
footer {
    position: fixed;
    bottom: 6px;
    color: $textGrayDark;
    width: 100%
}
p.copyright {
    width: $container-width;
    margin: 0 auto;
    text-align:center;
}

/* form elements */
fieldset {
    clear: both;
    position: relative;
}
input {
    box-sizing: border-box;
}
.shared-controls-textcontrol,
.account-login-textcontrol {
    float: left;
}
.shared-controls-textcontrol .placeholder,
.account-login-textcontrol .placeholder {
    top: 11px;
}
input[type=text],
input[type=password] {
    width: 200px;
    height: 40px;
    padding: 0 6px;
    border-color: $interactiveBorderColor;
    border-right-width: 0;
    border-radius: 0;
    margin-bottom: 0px;
}
input[type=text]::-ms-clear,
input[type=password]::-ms-reveal
{
     display: none;
}
input[type=text]:focus,
input[type=password]:focus {
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
    border-color: $interactiveBorderColor;
    outline: none;
}
input[name=username], input[name=newpassword] {
    border-top-left-radius: 4px;
    border-bottom-left-radius: 4px;
}
input[type=submit] {
    /* ensure the button in different locales is never pushed below */
    position: absolute;
    bottom: 0px;
    left: 400px;
    height: 40px;
    min-width: 60px;

    /* DCE-OEM-CHANGE
       keep input field centered
    */
    width: 80px;
    text-align: center;

    padding: 4px 12px;
    border-radius: 0 $interactiveBorderRadius $interactiveBorderRadius 0;
}

/* Messaging */
p.error {
    color: $red;
    padding: 0px;
    margin: 5px 0;
    width: 485px;
}
.messaging {
    min-height: 20px;
    margin-bottom: 10px;
}

/* First time login slide in */
.account-login-firsttime {
    /* jquery slidein requires a width and float otherwise jumps @ end */
    float: left;
    width: $container-width;
    padding-bottom: 16px;
    h2 {
        font-weight: normal;
        color: $textDisabledColor;
    }
    p, td {
        color: $textGray;
    }
    tr {
        line-height: 12px;
    }
    td {
        padding-right: 10px;
    }
}
/* TOS */
div[data-page=tosaccept] footer {
    position: relative;
}
.account[data-page=tosaccept] {
    top: 15%;
}
.account-tosaccept .content {
    background: $white;
    border-radius: $baseBorderRadius;
    color: $grayDark;
    padding: 17px;
    overflow-x: auto;
    max-height: 300px;
    margin-bottom: 14px;
}
.account-tosaccept .alert {
    padding: 0px;
    color: #F06363;
}
.account-tosaccept .icon-alert {
    display: none;
}
.account-tosaccept label {
    display: inline;
    font-size: $baseFontSizeLarge;
    font-weight: bold;
}
.account-tosaccept input {
    margin-top: -1px;
}
.account-tosaccept button {
    margin-top: -3px
}
.account-tosaccept label, .account-tosaccept input {
    margin-right: 10px;
}
body.lite {
    #brand {
        color: $white;
        font-size: 32px;
        padding-bottom: 10px;

        span.prompt {
            color: $splunkLiteOrange;
            font-weight: normal;
            -webkit-font-smoothing: antialiased;
        }
    }
    footer {
        background: none;
        text-align: center;
        color: $textDisabledColor;
        width: 100%;
    }
    .account {
        position: static;
    }
    .wrapper-container {
        padding: 20px 50px;
        width: 620px;
        background: color($grayDark a(0.75));
        position: absolute;
        top: 50%;
        left: 50%;
        @mixin translate -50%, -50%;
    }
    form table {
        border-collapse: separate;
    }
    input[type=submit] {
        position: static;
        border-radius: 0px;
        background: none;
        border: 1px solid $splunkLiteOrange !important;
        box-shadow: none;
        color: $splunkLiteOrange;
        margin-left: 6px;
        font-size: 16px;
        line-height: 35px;
        height: 35px;
        padding: 0 12px;
        filter: none;
        text-shadow: none;
    }
    form table td:first-child .input-wrapper,
    table input[type=text], #newpassword {
        border-radius: 0px;
    }
    input[type=text],
    input[type=password] {
        width: 230px;
        height: 35px;
        border-radius: 0;
    }
    table input[type=text],
    table input[type=password],
    table,
    table td {
        border: none;
        box-shadow: none;
    }
    .placeholder-text {
        padding: 11px 9px;
    }
    div[data-page=tosaccept] .wrapper-container {
        position: static;
        transform: initial;
        margin-bottom: 15px;
    }
    .account[data-page=tosaccept] {
        position: absolute;
    }
}
