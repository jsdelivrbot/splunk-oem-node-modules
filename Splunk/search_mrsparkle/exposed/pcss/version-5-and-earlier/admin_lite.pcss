form.admin-lite-dialog {
	width: 660px;
	margin: 30px auto 20px;
	background: $white;
	border: 1px solid $borderColor;
	border-radius: 2px;

	box-shadow: 0 1px 1px rgba(0, 0, 0, 0.08);
}
div.admin-dialog-wrapper {
}

div.admin-dialog-content {
    padding: 10px;
}

div.admin-dialog-content p {
    font-size: $baseFontSize;
    /*width: 42em;  SPL-58204 - this seems to break layout since the container is 600px */
}

div.admin-dialog-content h1,
div.admin-dialog-content .question {
	font-weight: bold;
	padding-top: 0px;
	font-size: 18px;
	color: $splunkGreen;
	word-wrap: break-word;
}

div.admin-dialog-content ul {
    font-size: $baseFontSize;
}

div.admin-dialog-content div.error {
    /* this MUST match the padding of div.admin-dialog-content */
    word-wrap: break-word;
}

div.admin-dialog-content label.big {
    font-size: 14px;
}

div.admin-dialog-gutter {
    border-bottom-left-radius: 5px;
	border-bottom-right-radius: 5px;
	background: $offWhite;
}

div.admin-dialog-tray {
    height:35px;
    padding:10px 10px 0 5px !important;
    text-align: right;
    overflow: hidden;
    border-top: 1px solid $borderColor;
}

div.admin-dialog-tray button {
    min-width: 110px;
}

div.message_block_error {
    padding: 1px 10px;
    background-color: #F7DADA;
    margin-bottom: 10px;
}

div.message_block_success {
    font-size: 18px;
    font-weight: bold;
    color: $splunkGreen;
    padding: 2px 16px 10px 0px;
    margin-bottom: 30px;
    background: url("/static/img/skins/default/icon-success-md.png") no-repeat scroll 0 0 transparent;
    border-bottom: 1px solid $borderColor;
    width: 623px;
}
span.message_block_success_text {
	padding-left: 30px;
}

p.message_block_header {
    font-weight: bold;
    border-bottom: 1px solid $red;
    padding: 1px 1px 3px 1px;
}

table.msg-listing {
    width: 600px;
    font-size: $baseFontSize;
}

table.msg-listing td {
    border-top: 1px solid #ddd;
}

table.msg-listing th {
