/*
 * manager-style accumulator
 */

div.accumulator {
    clear: right;
    white-space: nowrap;
}

div.accumulator .accumulator-label {
    font-weight: bold;
    font-size: $baseFontSizeSmall;
}

div.accumulator-pane {
    width: 195px;
    float: left;
    margin-right: 10px;
}

div.accumulator-scrollbox {
    height: 120px;
    overflow: auto;
    margin-top: 10px;
    border: 1px solid $borderColor;
}

div.accumulator ul {
    padding: 0;
    margin: 0;
    list-style-type: none;
}

div.accumulator li {
    padding: 2px 1px 2px 20px;
    cursor: default;
    background-repeat: no-repeat;
}
div.accumulator li:hover {
    background-color: #e5f2f5;
}

div.accumulator .available li {
    background-image: url('/static/img/skins/default/icon_circle_add.png');
    background-position: 3px 3px;
}

div.accumulator .selected li,
div.accumulator .available li.chosen {
    background-image: url('/static/img/skins/default/icon_circle_delete.png');
    background-position: 3px 3px;
}

div.accumulator .available li.chosen {
    color: #aaa;
}


div.accumulator li.disabled {
    background-image: none;
    color: #aaa;
    font-style: italic;
}
div.accumulator li.disabled:hover {
    background-color: transparent;
}



/*
 * licensing
 */
body {
    background-color: $bodyBackgroundColor;
    color: $grayDark;
    min-height: 500px;
}

h1 {
    margin-top: 5px;
    margin-bottom: 10px;
}

h2 {
    font-size: 14px;
    font-weight: bold;
    color: $splunkGreen;
    margin: 0px;
    margin-top: 30px;
}

h3 {
	margin: 15px 0px 10px;
}

span.add {
    background: url(/static/img/skins/default/licensing/icon_circle_add.png) no-repeat;
	cursor: pointer;
	padding-left: 15px;
	padding-right: 5px;
}

span.switch {
    cursor: pointer;
    padding-left: 15px;
    padding-right: 5px;
    background: url(/static/img/skins/default/licensing/icon_switch.png) no-repeat;
}

.button {
    cursor: pointer;
    @mixin interactive;
    border-radius:$interactiveBorderRadius;
    display: inline-block;
    padding: 4px 8px;
    font-weight: normal;

    &:hover {
        @mixin interactive-hover;
        text-decoration: none;
    }

    &:focus {
        @mixin focus-button;
    }
}



