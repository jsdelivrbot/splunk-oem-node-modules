  /*  Parent container */
.accordion {
    margin-bottom: 0;
    background: $white;
}

/*  Group == heading + body */
.accordion-group {
	margin-bottom: 0;
	border: none;
	border-radius: 0;
}
/*  Heading */
.accordion-heading {
	border-bottom: 0;
	position: relative;
}

/*  Heading Toggle */
.accordion-heading .accordion-toggle {
    display: block;
	padding: 6px 15px 6px 20px;
	line-height: $baseLineHeight;
	@mixin interactive;
	border-left: none;
	border-right: none;
	text-decoration: none;
	border-bottom: none;
    cursor: pointer;
	border-radius: 0;
	
	
	.icon-triangle-right-small:before {
		content: "\203A";
	}
	
	.icon-triangle-down-small:before {
		content: "\02C5";
	}
}
.accordion-group:first-child  .accordion-toggle {
	border-top-left-radius: $containerInnerBorderRadius;
	border-top-right-radius: $containerInnerBorderRadius;
	border-top: none;
}

.accordion-group:last-child  .accordion-toggle,
.accordion-group.active:last-child  .accordion-body {
	 border-bottom: 1px solid $interactiveBorderBottomColor;
	 border-bottom-left-radius: $containerInnerBorderRadius;
	 border-bottom-right-radius: $containerInnerBorderRadius;
	 border-bottom: none;
}

.accordion-group.active .accordion-toggle {
	background: $white;
	border-bottom: none;
	cursor: default;
}

.accordion-group.active:last-child  .accordion-toggle {
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}

.accordion-group:not(.active) .accordion-toggle:hover {
	@mixin interactive-hover;
	box-shadow: none;
}

.accordion-group .accordion-toggle:focus {
	@mixin focus-pill;
	@mixin reset-filter;
}

/*  Heading Toggle Icon */
.icon-accordion-toggle {
	position: absolute;
	left: 8px;
}

/*  Body */
.accordion-body {
	background-color: $white;
}

.accordion-inner {
	padding: 10px 20px 20px 20px;
	border: none;
	@mixin clearfix;
	position: relative;
}

/*  Lite */
@if $theme == lite {
	.accordion-heading .accordion-toggle {
		border-color: $borderColor;
		font-weight: bold;
	}
	
	.accordion-group:not(.active) .accordion-toggle {
		background-color: $offWhite;
		
		&:hover {
			background-color: $pillBackgroundColorHover;
			border-color: $borderColor;
		}
		
	}
}

