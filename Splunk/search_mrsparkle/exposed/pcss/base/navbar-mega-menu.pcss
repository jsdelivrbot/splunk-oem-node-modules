.mega-menu {
	@mixin clearfix;
	/* This background is covered by the popdown-dialog-body when there is no sidebar */
	background: @white url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAEsAQMAAAA4nkuWAAAABlBMVEX////MzMw46qqDAAAAEUlEQVQoU2NhYGkYhaOQ2hAALFSaMRD7VeAAAAAASUVORK5CYII=') repeat-y 150px;
	max-width: 602px; /* Fixes a bug with columns on IE11 */

	> .popdown-dialog-body {
		padding: 18px 0 10px 20px;
		width: 430px;
        columns:2;
        column-gap:0;
	}


	&.mega-menu-narrow > .popdown-dialog-body {
		width: 220px;
        columns:1;
	}

	.mega-menu-sidebar {
		width: 150px;
		padding: 20px 0;
		float: left;

		> a {
			color: $splunkGreen;
			text-align: center;
			display: block;
			text-decoration: none;
			padding: 20px;

			&:hover {
				background:color($splunkGreen l(+50%));
			}
		}

		svg {
			margin: 0 auto 10px auto;
			display: block;

		}
	}
	.mega-menu-sidebar + .popdown-dialog-body {
		margin-left: 152px;
	}



	.menu-section {
		display: inline-block;
		width: 155px;
		position: relative;
		padding: 2px 20px 0 30px;
		margin-bottom: 20px;
		color: $textColor;
        vertical-align: top;

		h5 {
			color: $textGray;
			font-size: $fontSizeSmall;
			text-transform: uppercase;
			font-weight: normal;
		}

		ul {
			list-style: none;
			margin: 0;
		}
		.icon {
			font-size: 25px;
			position: absolute;
			left: 2px;
			top: 2px;
			height: 25px;
			width: 22px;
			color: $textGray;
			opacity: 0.8;
			text-align: center;
		}

		li {
			line-height: 20px;
			text-indent: -10px;
			margin-left: 10px;
		}

	}
	hr {
		clear:both;
		border: none;
		border-top: 1px solid $interactiveBorderTopColor;
	}
}
