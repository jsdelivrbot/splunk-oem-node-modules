
/*  Utility classes */
/*  -------------------------------------------------- */


/*  Quick floats */
.pull-right {
  float: right;
}
.pull-left {
  float: left;
}

/*  Toggling content */
.hide {
  display: none;
}
.show {
  display: block;
}

/*  Visibility */
.invisible {
  visibility: hidden;
}

/*  For Affix plugin */
.affix {
  position: fixed;
}

/* Proxy mixin s */
.clearfix {
    @mixin clearfix;
}

.hide-text {
    @mixin hide-text;
}

.input-block-level {
    @mixin input-block-level;
}
