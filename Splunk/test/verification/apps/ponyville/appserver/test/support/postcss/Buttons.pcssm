.default {
	display: inline-block;
	text-align: center;
	background-color: black;
	border: 1px solid transparent;
	border-radius: 3px;
	line-height: 2em;
	padding: 0 10px;
	color: color(#fff a(80%));
	margin: 0 20px 20px 20px;

	&:hover {
		box-shadow: inset 0 0 0 1px white;
		color: white;
		text-decoration: none;
	}
}
